@model VirtualOffice.Web.Models.MerchantCreationModel
@{
    Layout = "~/Views/Shared/_NewUserLayout.cshtml";
}

<div class="container select" id="main">
    <div class="row">
        <div class="panel panel-default ">
            <div class="panel-heading">
                <h4>General Information</h4>
            </div>
            <div class="panel-body text-center">
                <div>
                    @using (Html.BeginForm("CreateAccount", "MyProfile"))
                    {
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("Legal name of business")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.BusinessName, new { @class = "form-control ", @placeholder = "Legal name of business", @type = "text" })
                                @Html.ValidationMessageFor(model => model.BusinessName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("Business Phone No")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.BusinessPhone, new { @class = "form-control", @placeholder = "Business Phone No.", @type = "text" })
                                @Html.ValidationMessageFor(model => model.BusinessPhone)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("Business Fax No")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.BusinessFax, new { @class = "form-control", @placeholder = "Business Fax No.", @type = "text" })
                                @Html.ValidationMessageFor(model => model.BusinessFax)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("DBA (Doing Business As)")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.DBA, new { @class = "form-control", @placeholder = "DBA (Doing Business As)", @type = "text" })
                                @Html.ValidationMessageFor(model => model.DBA)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("E-Mail Address")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "E-Mail Address", @type = "email" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("Cellphone #")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.CellPhone, new { @class = "form-control", @placeholder = "Cellphone #", @type = "text" })
                                @Html.ValidationMessageFor(model => model.CellPhone)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("Business Street Address")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.BusinessStreet, new { @class = "form-control", @placeholder = "Business Street Address", @type = "text" })
                                @Html.ValidationMessageFor(model => model.BusinessStreet)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("City")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.BusinessCity, new { @class = "form-control", @placeholder = "City", @type = "text" })
                                @Html.ValidationMessageFor(model => model.BusinessCity)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("State")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                <select class="form-control">
                                    <option value="AL">Alabama</option>
                                    <option value="AK">Alaska</option>
                                    <option value="AZ">Arizona</option>
                                    <option value="AR">Arkansas</option>
                                    <option value="CA">California</option>
                                    <option value="CO">Colorado</option>
                                    <option value="CT">Connecticut</option>
                                    <option value="DE">Delaware</option>
                                    <option value="DC">District Of Columbia</option>
                                    <option value="FL">Florida</option>
                                    <option value="GA">Georgia</option>
                                    <option value="HI">Hawaii</option>
                                    <option value="ID">Idaho</option>
                                    <option value="IL">Illinois</option>
                                    <option value="IN">Indiana</option>
                                    <option value="IA">Iowa</option>
                                    <option value="KS">Kansas</option>
                                    <option value="KY">Kentucky</option>
                                    <option value="LA">Louisiana</option>
                                    <option value="ME">Maine</option>
                                    <option value="MD">Maryland</option>
                                    <option value="MA">Massachusetts</option>
                                    <option value="MI">Michigan</option>
                                    <option value="MN">Minnesota</option>
                                    <option value="MS">Mississippi</option>
                                    <option value="MO">Missouri</option>
                                    <option value="MT">Montana</option>
                                    <option value="NE">Nebraska</option>
                                    <option value="NV">Nevada</option>
                                    <option value="NH">New Hampshire</option>
                                    <option value="NJ">New Jersey</option>
                                    <option value="NM">New Mexico</option>
                                    <option value="NY">New York</option>
                                    <option value="NC">North Carolina</option>
                                    <option value="ND">North Dakota</option>
                                    <option value="OH">Ohio</option>
                                    <option value="OK">Oklahoma</option>
                                    <option value="OR">Oregon</option>
                                    <option value="PA">Pennsylvania</option>
                                    <option value="RI">Rhode Island</option>
                                    <option value="SC">South Carolina</option>
                                    <option value="SD">South Dakota</option>
                                    <option value="TN">Tennessee</option>
                                    <option value="TX">Texas</option>
                                    <option value="UT">Utah</option>
                                    <option value="VT">Vermont</option>
                                    <option value="VA">Virginia</option>
                                    <option value="WA">Washington</option>
                                    <option value="WV">West Virginia</option>
                                    <option value="WI">Wisconsin</option>
                                    <option value="WY">Wyoming</option>
                                </select>	
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("ZIP")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.BusinessZip, new { @class = "form-control", @placeholder = "ZIP", @type = "text" })
                                @Html.ValidationMessageFor(model => model.BusinessZip)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("Guarantor Name")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.GuarantorName, new { @class = "form-control", @placeholder = "Guarantor Name", @type = "text" })
                                @Html.ValidationMessageFor(model => model.GuarantorName)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-xs-12 col-sm-4 col-md-4">
                                @Html.Label("Guarantor Phone No")
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-7">
                                @Html.TextBoxFor(model => model.GuarantorPhone, new { @class = "form-control", @placeholder = "Guarantor Phone No", @type = "text" })
                                @Html.ValidationMessageFor(model => model.GuarantorPhone)
                            </div>
                        </div>
                        <div class="col-xs-11 col-sm-11 col-md-11 text-right " >
                            <input type="submit" class="btn btn-secundary" value="Submit"/>
                        </div>
                    }
                </div> <!-- .row -->
            </div>
        </div>
    </div>

</div>

<style>
    .panel{
        margin-top : 20PX;
    }
   
</style>