@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@Html.Partial("MyProfileNavigation")

<div class="container select" id="main">

    <!-- <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <span class="msg"></span>
    </div> -->

    <div class="page-header">
        <h4>My Profile / Password Change </h4>
        <a class="btn text-primary pull-right" href="mailto:blackstone@blackstoneonline.com"><span class="fa fa-envelope"></span> Check my email</a>
    </div>

    <div class="row">
        @*<div class="col-xs-12 col-sm-3 col-md-2 col-sm-push-9 col-md-push-10" id="sidebar">
        </div>*@

        <div class="col-xs-12 col-sm-12 col-md-12"> @*col-sm-pull-4 col-md-pull-2*@
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Password Change</h4>
                </div>
                <div class="panel-body">
                    <div class="col-sm-6 col-md-4">
                        <form class="" role="form">
                            <div class="form-group">
                                 <label for="exampleInputEmail1">Old Password</label> 
                                <input type="email" class="form-control" id="oldpassword" placeholder="Enter your OLD PASSWORD">
                            </div>

                            <div class="form-group">
                                <label for="newpassword">New Password</label> 
                                <input type="email" class="form-control" id="newpassword" placeholder="Enter your NEW PASSWORD">
                            </div>

                            <div class="form-group">
                                <label for="confirmpassword">Confirm Password</label> 
                                <input type="password" class="form-control" id="confirmpassword" placeholder="Confirm your New Password">
                            </div>

                            <!-- <label class="control-label">&nbsp;</label> -->
                            <button type="submit" class="btn btn-secundary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
